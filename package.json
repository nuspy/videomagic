{
  "name": "untitled",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:web": "npm run -w apps/web dev",
    "dev:api": "npm run -w apps/api dev",
    "build": "run-s build:*",
    "build:web": "npm run -w apps/web build",
    "build:api": "npm run -w apps/api build",
    "test": "run-p test:*",
    "test:web": "npm run -w apps/web test",
    "test:api": "npm run -w apps/api test:api",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "i18next": "^25.4.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.x",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "vite": "^7.1.2",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,json,md,yml,yaml,css}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  }
}
